<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nefu.embedded.user.dal.UserMapper">

  <sql id="BaseColumns">userId, userName, nickName, avatar, signature, studentId, password, birthday, college, subject,
                      classLevel, sex, phone, email, weChat, qq, isDeleted, updated, created</sql>

  <insert id="insert" keyProperty="userId" useGeneratedKeys="true"
    parameterType="cn.edu.nefu.embedded.user.domain.entity.UserInfo">
    INSERT INTO `User`
    <trim prefix="(" suffix=")">
      <if test="userName != null">
        userName
      </if>
      <if test="nickName != null">
        ,nickName
      </if>
      <if test="avatar != null">
        ,avatar
      </if>
      <if test="signature != null">
        ,signature
      </if>
      <if test="studentId != null">
        ,studentId
      </if>
      <if test="password != null">
        ,password
      </if>
      <if test="birthday != null">
        ,birthday
      </if>
      <if test="college != null">
        ,college
      </if>
      <if test="subject != null">
        ,subject
      </if>
      <if test="classLevel != null">
        ,classLevel
      </if>
      <if test="sex != null">
        ,sex
      </if>
      <if test="phone != null">
        ,phone
      </if>
      <if test="email != null">
        ,email
      </if>
      <if test="weChat != null">
        ,weChat
      </if>
      <if test="qq != null">
        ,qq
      </if>
      <if test="isDeleted != null">
        ,isDeleted
      </if>
      ,created,updated
    </trim>
    VALUES
    <trim prefix="(" suffix=")">
      <if test="userName != null">
        #{userName}
      </if>
      <if test="nickName != null">
        ,#{nickName}
      </if>
      <if test="avatar != null">
        ,#{avatar}
      </if>
      <if test="signature != null">
        ,#{signature}
      </if>
      <if test="studentId != null">
        ,#{studentId}
      </if>
      <if test="password != null">
        ,#{password}
      </if>
      <if test="birthday != null">
        ,#{birthday}
      </if>
      <if test="college != null">
        ,#{college}
      </if>
      <if test="subject != null">
        ,#{subject}
      </if>
      <if test="classLevel != null">
        ,#{classLevel}
      </if>
      <if test="sex != null">
        ,#{sex}
      </if>
      <if test="phone != null">
        ,#{phone}
      </if>
      <if test="email != null">
        ,#{email}
      </if>
      <if test="weChat != null">
        ,#{weChat}
      </if>
      <if test="qq != null">
        ,#{qq}
      </if>
      <if test="isDeleted != null">
        ,#{isDeleted}
      </if>
      ,UNIX_TIMESTAMP(),UNIX_TIMESTAMP()
    </trim>
  </insert>

  <update id="update" parameterType="cn.edu.nefu.embedded.user.domain.entity.UserInfo">
    UPDATE `UserInfo`
    <set>
      <if test="userName != null">
        userName=#{userName}
      </if>
      <if test="nickName != null">
        AND nickName=#{nickName}
      </if>
      <if test="avatar != null">
        AND avatar=#{avatar}
      </if>
      <if test="signature != null">
        AND signature=#{signature}
      </if>
      <if test="studentId != null">
        AND studentId=#{studentId}
      </if>
      <if test="password != null">
        AND password=#{password}
      </if>
      <if test="birthday != null">
        AND birthday=#{birthday}
      </if>
      <if test="college != null">
        AND college=#{college}
      </if>
      <if test="subject != null">
        AND subject=#{subject}
      </if>
      <if test="classLevel != null">
        AND classLevel=#{classLevel}
      </if>
      <if test="sex != null">
        AND sex=#{sex}
      </if>
      <if test="phone != null">
        AND phone=#{phone}
      </if>
      <if test="email != null">
        AND email=#{email}
      </if>
      <if test="weChat != null">
        AND weChat=#{weChat}
      </if>
      <if test="qq != null">
        AND qq=#{qq}
      </if>
      AND updated=UNIX_TIMESTAMP()
    </set>
    WHERE userId=#{userId}
    LIMIT 1
  </update>

  <update id="deleteByUserId" parameterType="java.lang.Long">
    UPDATE `UserInfo`
    SET isDeleted=1
    WHERE userId=#{userId}
    LIMIT 1
  </update>

  <select id="queryByUserId" parameterType="java.lang.Long" resultType="cn.edu.nefu.embedded.user.domain.entity.UserInfo">
    SELECT <include refid="BaseColumns"/>
    FROM `UserInfo`
    WHERE userId=#{userId} AND isDeleted=0
    LIMIT 1
  </select>

  <select id="queryByUserIds" parameterType="java.util.List" resultType="cn.edu.nefu.embedded.user.domain.entity.UserInfo">
    SELECT <include refid="BaseColumns"/>
    FROM `UserInfo`
    WHERE userId in
    <trim prefix="(" suffix=")">
      <foreach collection="userIds" item="userId" separator=",">
        #{userId}
      </foreach>
    </trim>
    AND isDeleted=0
    LIMIT 500
  </select>

  <select id="queryByEmail" parameterType="java.lang.String" resultType="cn.edu.nefu.embedded.user.domain.entity.UserInfo">
    SELECT <include refid="BaseColumns"/>
    FROM `UserInfo`
    WHERE email=#{email} AND isDeleted=0
    LIMIT 1
  </select>

  <select id="queryByPhone" parameterType="java.lang.String" resultType="cn.edu.nefu.embedded.user.domain.entity.UserInfo">
    SELECT <include refid="BaseColumns"/>
    FROM `UserInfo`
    WHERE phone=#{phone} AND isDeleted=0
    LIMIT 1
  </select>

  <select id="queryByStudentId" parameterType="java.lang.String" resultType="cn.edu.nefu.embedded.user.domain.entity.UserInfo">
    SELECT <include refid="BaseColumns"/>
    FROM `UserInfo`
    WHERE studentId=#{studentId} AND isDeleted=0
    LIMIT 1
  </select>

  <select id="queryByNickName" parameterType="java.lang.String" resultType="cn.edu.nefu.embedded.user.domain.entity.UserInfo">
    SELECT <include refid="BaseColumns"/>
    FROM `UserInfo`
    WHERE nickName=#{nickName} AND isDeleted=0
    LIMIT 1
  </select>
</mapper>